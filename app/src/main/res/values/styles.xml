<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black4</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Logo">
        <item name="android:fontFamily">@font/caveatbrush_regular</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="Text.Logo.Splash">
        <item name="android:textColor">@color/white1</item>
        <item name="android:shadowColor">@color/black4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Text.Header">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title.Section">
        <item name="android:fontFamily">@font/nunitosans_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title.Section.Red">
        <item name="android:textColor">@color/red4</item>
    </style>

    <style name="Text.Title.Input">
        <item name="android:textColor">@color/black3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
    </style>

    <style name="Text.Description">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Description.Highlight">
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="Text.Content">
    </style>

    <style name="Text.Content.Highlight">
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="Text.Content.Highlight.White">
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="Text.Button">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="Text.Button.Highlight">
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="Text.BottomNav">
        <item name="android:textColor">@color/black2</item>
        <item name="android:fontFamily">@font/nunitosans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.BottomNav.Active">
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="Text.TabLabel">
        <item name="android:fontFamily">@font/nunitosans_medium</item>
    </style>

    <style name="Text.TabLabel.Active">

    </style>

    <style name="Text.TabLabel.Active.Blue">
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="Text.TabLabel.Active.Orange">
        <item name="android:textColor">@color/orange5</item>
    </style>

    <style name="Text.TabLabel.Active.Green">
        <item name="android:textColor">@color/green4</item>
    </style>

    <style name="Text.TabLabel.Active.Red">
        <item name="android:textColor">@color/red4</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white1</item>
        <item name="colorPrimary">@color/blue2</item>
        <item name="fontFamily">@font/nunitosans_medium</item>
    </style>

</resources>