<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/app_horizontal_margin"
    android:paddingVertical="@dimen/item_padding_vertical"
    android:orientation="vertical"
    android:gravity="start">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới thiệu"
        style="@style/Text.Title"
        android:background="@drawable/bg_border_bottom"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/place_info_section_small_margin"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent rutrum lectus tortor, sed placerat nunc pulvinar eu. Nulla mattis dignissim. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent rutrum lectus tortor, sed placerat nunc pulvinar eu. Nulla mattis dignissim."
        style="@style/Text.Content"/>

    <ImageView
        android:id="@+id/place_cover_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/place_info_full_width_image_height"
        android:layout_marginTop="@dimen/place_info_section_small_margin"
        android:src="@drawable/brown"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/bg_radius"/>

</LinearLayout>