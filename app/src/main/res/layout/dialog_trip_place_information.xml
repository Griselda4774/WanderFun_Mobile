<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:paddingHorizontal="@dimen/item_padding_horizontal_small"
    android:background="@drawable/bg_dialog">

    <!-- Inner container background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="800dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:background="@drawable/bg_popup_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/trip_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Place Name"
            style="@style/Text.Header"
            android:textColor="@color/blue2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/trip_place_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01/01/2025 - 01/01/2025"
            style="@style/Text"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/trip_place_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/trip_place_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address of the trip place"
            style="@style/Text.Description"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/trip_place_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/trip_place_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Note for the trip place"
            style="@style/Text.Description"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/trip_place_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/trip_place_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_placeholder"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/trip_place_note"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
